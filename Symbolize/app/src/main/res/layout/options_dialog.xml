<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <TextView
        android:id="@+id/Title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Options"
        android:textSize="27dp"
        android:textColor="@color/black"
        android:gravity="center"/>

    <CheckedTextView
        android:id="@+id/options_show_graph"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:checked="true"
        android:textColor="@color/black"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:text="Show graph"/>

    <CheckedTextView
        android:id="@+id/options_show_border"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:checked="false"
        android:textColor="@color/black"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:text="Show border"/>

    <CheckedTextView
        android:id="@+id/options_snap_drawing"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:checked="false"
        android:textColor="@color/black"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:text="Snap drawing"/>

    <CheckedTextView
        android:id="@+id/options_show_animation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:checked="true"
        android:textColor="@color/black"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:text="Show animations"/>


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Volume"
        android:textSize="20dp"
        android:textColor="@color/black"/>
    <SeekBar
        android:id="@+id/options_seekbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:progress="100">
    </SeekBar>

    <Button
        android:id="@+id/options_delete_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete all data"
        android:layout_gravity="center">
    </Button>

</LinearLayout>
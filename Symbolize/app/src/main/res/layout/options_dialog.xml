<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/options_dialog"
    android:orientation="vertical" android:layout_width="250dp"
    android:layout_height="400dp"
    style="@style/dialog">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/options_dialog_title"
        style="@style/options_title"/>

    <View style="@style/title_separator"/>

    <Button
        android:id="@+id/about_options_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_dialog_title"
        android:layout_gravity="left"
        android:layout_marginBottom="5dp"
        style="@style/button">
    </Button>

    <Button
        android:id="@+id/game_options_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/game_dialog_title"
        android:layout_gravity="left"
        style="@style/button">
    </Button>

    <Button
        android:id="@+id/video_options_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/video_dialog_title"
        android:layout_gravity="left"
        style="@style/button">
    </Button>

    <Button
        android:id="@+id/audio_options_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/audio_dialog_title"
        android:layout_gravity="left"
        style="@style/button">
    </Button>

    <Button
        android:id="@+id/data_options_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/data_dialog_title"
        android:layout_gravity="left"
        style="@style/button">
    </Button>

    <Button
        android:id="@+id/options_reset_to_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/options_revert_to_default"
        android:layout_gravity="left"
        style="@style/button">
    </Button>

    <View android:layout_height="0dp" android:layout_width="0dp" android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/Close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/close_button"/>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="250dp"
    android:layout_height="400dp"
    style="@style/dialog">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/game_dialog_title"
        style="@style/title"/>

    <CheckedTextView
        android:id="@+id/options_show_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="true"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:text="@string/options_show_grid"
        style="@style/text"/>

    <CheckedTextView
        android:id="@+id/options_show_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="false"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:text="@string/options_show_border"
        style="@style/text"/>

    <CheckedTextView
        android:id="@+id/options_snap_drawing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="false"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:text="@string/options_snap_drawing"
        style="@style/text"/>

    <Button
        android:id="@+id/options_reset_to_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/options_revert_to_default"
        android:layout_gravity="center"
        style="@style/button">
    </Button>

    <View android:layout_height="0dp" android:layout_width="0dp" android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/Close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/back"
            style="@style/close_button"/>
    </LinearLayout>

</LinearLayout>
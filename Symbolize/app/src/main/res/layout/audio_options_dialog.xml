<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="250dp"
    android:layout_height="400dp"
    style="@style/dialog">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/audio_dialog_title"
        android:textSize="27dp"
        android:textColor="@color/black"
        style="@style/title"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/options_audio_output"
        android:textSize="20dp"
        android:textColor="@color/black"/>
    <Spinner
        android:id="@+id/options_audio_output_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/audio_output_options">
        </Spinner>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/options_volume"
        android:textSize="20dp"
        android:textColor="@color/black"/>
    <SeekBar
        android:id="@+id/options_volume_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:progress="100"/>
    <CheckedTextView
        android:id="@+id/options_mute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:checked="false"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:text="@string/options_mute"/>

    <Button
        android:id="@+id/options_reset_to_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/options_revert_to_default"
        android:layout_gravity="center">
    </Button>

    <TextView
        android:id="@+id/alpha_audio_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:text="@string/alpha_audio_note"/>

    <View android:layout_height="0dp" android:layout_width="0dp" android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/Close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/back"/>
    </LinearLayout>

</LinearLayout>
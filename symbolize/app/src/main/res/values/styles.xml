<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- Android styles -->

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton"/>

    
    <!-- Symbolize styles -->

    <style name="image">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@null</item>
    </style>
    
    <style name="bottom_toolbar_button" parent="image">
        <item name="android:padding">5dp</item>
    </style>


    <style name="title">
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">27dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="sub_title" parent="title">
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="options_title" parent="title">
        <item name="android:gravity">left</item>
    </style>

    <style name="text">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:typeface">sans</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="sub_text" parent="text">
        <item name="android:textSize">17dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="input_text" parent="sub_text">
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">number</item>
        <item name="android:background">@drawable/apptheme_edit_text_holo_light</item>
    </style>

    <style name="credits" parent="text">
        <item name="android:textSize">16dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="credits_title" parent="credits">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="options_spinner">
        <item name="android:layout_gravity">center</item>
        <item name="android:progressDrawable">@drawable/apptheme_scrubber_progress_horizontal_holo_light</item>
        <item name="android:thumb">@drawable/apptheme_scrubber_control_selector_holo_light</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="options_check">
        <item name="android:button">@drawable/apptheme_btn_check_holo_light</item>
    </style>

    <style name="dropdown">
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:dropDownHorizontalOffset">0sp</item>
        <item name="android:dropDownVerticalOffset">0sp</item>
        <item name="android:background">@drawable/apptheme_spinner_background_holo_light</item>
        <item name="android:popupBackground">@color/light_gray</item>
        <item name="android:dropDownListViewStyle">@style/text</item>
    </style>

    <style name="button" parent="sub_title">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="close_button" parent="button">
        <item name="android:textColor">@color/bright_red</item>
        <item name="android:text">@string/close</item>
    </style>

    <style name="back_button" parent="image">
        <item name="android:src">@drawable/arrow</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:height">20dp</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="reset_button" parent="image">
        <item name="android:src">@drawable/reset</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:height">20dp</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <!-- Dialog styles -->
    <style name="dialog">
        <item name="android:padding">10dp</item>
    </style>

    <style name="title_separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dip</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@color/gray</item>

    </style>


    <!-- Dialog animation setup -->

    <style name="HintDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/zoomup</item>
        <item name="android:windowExitAnimation">@anim/zoomdown</item>
    </style>

    <style name="OptionsDialogAnimation_1">
        <item name="android:windowEnterAnimation">@anim/zoomupleft</item>
        <item name="android:windowExitAnimation">@anim/zoomdownright</item>
    </style>

    <style name="OptionsDialogAnimation_2">
        <item name="android:windowEnterAnimation">@anim/zoomdownleft</item>
        <item name="android:windowExitAnimation">@anim/zoomupright</item>
    </style>

    <style name="OptionDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="DialogNoAnimation">
        <item name="android:windowEnterAnimation">@anim/enter</item>
        <item name="android:windowExitAnimation">@anim/exit</item>
    </style>

</resources>

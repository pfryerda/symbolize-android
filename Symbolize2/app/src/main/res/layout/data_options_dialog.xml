                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:text="@string/levels_complete"/>
                <CheckedTextView
                    android:id="@+id/world_2_complete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                    android:text="@string/world_complete"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/world_3_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:text="@string/world_3"/>
                <TextView
